<div data-div="step-form">
  <h1>Edit Step</h1>
  <%= form_for step, url: update_recipe_step_path(step), remote: true do |f| %>
    <p><%= f.text_area :description, placeholder: "description" %></p>
    <p>
      <div data-handler="errors"></div>
      <%= f.submit "Submit" %>
    </p>
  <% end %>
</div>

