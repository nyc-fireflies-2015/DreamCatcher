<div id="step-index" class="popular-steps-container">
  <div data-form="new_step">
   <%= render "new" %>
  </div>

  <% if current_dreamer == @creator %>
  <div class="center">
    <p><%= link_to "Add to Recipe", new_step_path, class: "button", data: {link: "new_step" } %></p>
    <h3 class="popular-title">Popular Steps</h3>
  </div>
  <% end %>

  <div class="popular-steps-river">
    <ul data-river="popular_steps">
      <% @popular_steps.each do |step| %>
        <%= render partial: "popular_step", locals: {step: step} %>
      <% end %>
    </ul>
  </div>
</div>

<div class="recipe-container">
  <div class="center">
    <h3>My Dream Recipe</h3>
  </div>

  <div class="recipe-steps-river">
    <ul data-river="recipe_steps">
    <%= render @steps %>
    </ul>
  </div>
</div>
