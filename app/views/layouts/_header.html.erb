<div class="sticky">
  <header class="top-bar" data-topbar role="navigation" class="row">
    <ul class="title-area">
      <li class="name">
        <h1 class="title-area"><%= link_to "DreamCatcher", root_path %></h1>
      </li>
    </ul>

    <nav class="right top-bar-section">
      <ul>
        <li>
          <%= form_tag search_path, method: :get do %>
            <%= text_field_tag :q, "search" %>
          <% end %>
        </li>
        <% if current_dreamer %>
          <li><%= link_to "Dreams", root_path %></li>
          <li><%= link_to "Recipe", steps_path %></li>
          <li class="has-dropdown">
            <%= link_to "#{current_dreamer.username}", profile_path(current_dreamer) %>
            <ul class="dropdown">
              <li><%= link_to "Profile", profile_path(current_dreamer) %></li>
              <li><%= link_to "Log Out", logout_path, method: "delete" %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign Up", signup_path %></li>
          <li><%= link_to "Log In", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </header>
</div>
