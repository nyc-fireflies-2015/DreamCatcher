<div class="trend-container">
  <div data-form="new">
    <%= render "new" %>
  </div>

  <div class="center">
    <p><%= link_to 'Add New Dream', new_dream_path, class: "button", data: {link: "add-dream" } %></p>
    <h3 class="popular-dreams-title">Popular Dreams</h3>
  </div>

  <div class="trend-river">
    <% @popular_dreams.each do |dream| %>
       <%= link_to dream.title, dream_path(dream) %><br>
    <%end%>
  </div>
</div>

<div class="dreams-container">
  <div class="center">
    <h3>Recent Dreams</h3>
  </div>
  <div data-timestamp="" data-method="get" data-action="/shortpoll" data-info="timestamp" class="dream-river">
    <ul data-river="dreams">
      <%= render @dreams %>
    </ul>
  </div>
</div>


