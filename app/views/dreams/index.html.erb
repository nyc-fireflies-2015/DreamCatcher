<div class="trend-container">
  <div data-form="new">
   <%= render "new" %>
  </div>

  <div class="center">
    <p><%= link_to 'Add New Dream', new_dream_path, class: "button", data: {link: "add-dream" } %></p>
    <h3>Popular Dreams</h3>
  </div>

  <div class="trend-river">
    <% @popular_dreams.each do |dream| %>
       <%= link_to dream.title, dream_path(dream) %><br>
    <%end%>
  </div>
</div>

<div class="dreams-container">
  <div class="center">
    <h3>Recent Dreams</h3>
  </div>
  <div class="dream-river">
    <ul data-river="dreams">
      <% @dreams.each do |dream| %>
        <li data-li="summary">
          <div data-div="info">
            <%= render partial: "info", locals: {dream: dream} %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>


